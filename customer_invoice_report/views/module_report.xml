<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<data>

		<template id="customer_invoice">
			<t t-call="web.html_container">
				<t t-call="web.internal_layout">
					<t t-foreach="docs" t-as="o">

						<div class="page">

							<style type="text/css">
								@media (min-width: 1200px) {
									.container {
									   width: 100%;
									}
								}
								@media (min-width: 992px) {
									.container {
									   width: 100%;
									}
								}
								@media (min-width: 768px) {
									.container {
									   width: 100%;
									}
								}
								.container {
								   width: 100%;
								}
								body.o_in_iframe {
									margin: 0px !important;
									padding: 0px !important;
								}
								.header,
								.footer {
									display: none;
								}
								.main_wraper {
									width: 1000px;
									margin:0px auto; 
								}
								.h1_div {
									font-weight: bold;
									font-size: 20px;
									margin-top: 30px;
								}
								.h2_div {
									font-weight: bold;
									font-size: 20px;
									margin-top: 30px;
									float: right;
									margin-right: 200px;
								}
								.h3_div {
									font-weight: bold;
									font-size: 25px;
								}
								.main_div {
									width: 100%
								}
								.left_div {
									font-size: 20px;
									width: 50%;
									float: left;

								}
								.right_div {
									font-size: 20px;
									float: right;
									width: 50%;
								}
								.clear_float {
									float: none;
									clear: both;
									width: 1
									height: 1px;
								}
								table {
								}
								th {
									text-align: center;
									font-size: 20px;
									font-weight: bold;
									padding: 8px;
								}
								td {
									text-align:center;
									border-top: 1px solid black;
									font-weight: bold;
									font-size: 15px;
									padding: 5px;
									border-bottom: 1px solid black;
								}
								img {
									width: 33%;
									height: 270px;
								}
								.solid {
    								font-weight: bold;
    								margin-right: 15px;
								}
								h3 {
								    font-weight: bold;
								}
							</style>
							<div class="main_wraper">
								<h1 class="h1_div">INVOICE#
									<span t-esc="o.invoice_sequence_number_next_prefix"></span>
									<span t-esc="o.invoice_sequence_number_next"></span>
								</h1>
								<!-- <span t-esc="company.image_1920"  t-field-options='{"widget": "image"}'></span> -->
								<img src="/customer_invoice_report/static/src/img/logo.png"/>
								<p class="h2_div">TAX INVOICE</p>
								<p class="h3_div">
									<span t-esc="company.name"></span>
								</p>
								<div class="main_div">
									<div class="left_div">
										<p>
											<span t-esc="company.street"></span>
											<span t-esc="company.street2"></span>
											<span t-esc="company.city"></span>
											<span t-esc="company.country_id.name"></span>
										</p>
										<p>
											<span class="solid">TEL:</span>
											<span t-esc="company.phone"></span> 
											<!-- <span>Mobile:</span> -->
											<!-- <span t-esc="company.mobile"></span> -->
										</p>
										<p>
											<span class="solid">TRN:</span>
											<span t-esc="company.vat"></span>
										</p>
										<p>
											<span class="solid">Requestor/Billing Contact: </span>
											<span> -- </span>
										</p>
										
									</div>
									<div class="right_div">
										<p>
											<span class="solid">Invoice date:</span>
											<span t-esc="o.invoice_date"></span>
										</p>
										<p>
											<span class="solid">BILL TO:</span>
											<span t-esc="o.partner_id.name"></span>
										</p>
										<p>
											<span class="solid">Client TRN Number: </span>
											<span t-esc="o.partner_id.vat"></span>
										</p>
										<p>
											<span class="solid">SO Number: </span>
											<span t-esc="o.sale_order_id.name"></span>
										</p>
									</div>
								</div>
								<br class="clear_float"/>
								<br class="clear_float"/>
								<table width="100%">
									<tr>
										<th>DETAILS</th>
										<th>AMOUNT</th>
									</tr>
									<t t-foreach="o.invoice_line_ids" t-as="data">
										<tr>
											<td>
												<span t-esc="data.name"></span>
											</td>
											<td>
												<span t-esc="'{0:,.2f}'.format(float(data.price_subtotal))"></span>
											</td>
										</tr>
									</t>
									<!-- <t t-foreach="o.invoice_line_ids" t-as="data"> -->

										<tr>
											<th style="text-align:right;">Vat@5%:</th>
											<th>
												<span t-esc="'{0:,.2f}'.format(float(o.amount_by_group[0][1]))"></span>
											</th>
										</tr>

										<tr>
											<th style="text-align:right;">Total:</th>
											<th>
												<span t-esc="'{0:,.2f}'.format(float(o.amount_total))"></span>
											</th>
										</tr>
									<!-- </t> -->
								</table>
								<h3>Payment Instructions:</h3>
								<div class="main_div">
									<div class="left_div">
										<p>
											<span class="solid">Bank Transfer:</span>
											<span>Abu Dhabi Commercial Bank</span>
										</p>
										<p>
											<span class="solid">Bank name:</span>
											<span t-esc="o.invoice_partner_bank_id.bank_id.name"></span>
										</p>
									</div>
									<div class="right_div">
										<p>
											<span class="solid">IBAN:</span>
											<span t-esc="o.invoice_partner_bank_id.acc_number"></span>
										</p>
										<p>
											<span class="solid">Account Holder:</span>
											<span t-esc="o.invoice_partner_bank_id.partner_id.name"></span>
										</p>
									</div>
								</div>
								<br class="clear_float"/>
								<br class="clear_float"/>
								<div class="main_div">
									<div class="left_div">
										<p>
											<span class="solid">SWIFT:</span>
											<span t-esc="o.invoice_partner_bank_id.bank_id.bic" ></span> 
										</p>
										<p>
											<span class="solid">Payment Terms:</span>
											<span t-esc="o.invoice_payment_term_id.name"></span>
										</p>
									</div>
								</div> 
								<br class="clear_float"/>
								<p style="font-size: 25px;">
									If you have any questions concerning this invoice please contact Tunji Abiola at <span t-esc="company.website"></span>
								</p>
							</div>
						</div><!--end of page-->
					</t>
				</t>
			</t>
		</template>
	</data>
</odoo>