<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>   

        <template id="cost_card">
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
                    <div class="page">

                        <style type="text/css">
                            @media (min-width: 1200px) {
                                .container {
                                   width: 100%;
                                }
                            }
                            @media (min-width: 992px) {
                                .container {
                                   width: 100%;
                                }
                            }
                            @media (min-width: 768px) {
                                .container {
                                   width: 100%;
                                }
                            }
                            .container {
                               width: 100%;
                            }
                            body.o_in_iframe {
                                margin: 0px !important;
                                padding: 0px !important;
                            }
                            .header,
                            .footer {
                                display: none;
                            }
                            .main_wraper {
                                width: 1000px;
                                margin: 0px auto;
                            }
                            h1 {
                                text-align: center;
                            }
                            .main_div {
                                width   :100%;
                            }
                            .left {
                                width :49%;
                                float:left;
                            }
                            .right {
                                width:49%;
                                float:left;
                            }
                            table {
                                border:1px solid;
                                border-collapse:collapse;   
                            }
                            th {
                                border:1px solid;
                                border-collapse:collapse;
                                text-align:center;
                                padding: 5px;
                                background: darkgray;
                            }
                            td {
                                text-align:center;
                                padding: 3px;
                                border:1px solid;
                                border-collapse:collapse;
                            }
                            .clear_float {
                                float:none;
                                clear:both;
                                display:block;
                                width:1px;
                                height:1px;
                            }
                            .one_div {
                                width :25%;
                                float:left ;
                                display:inline-block;
                            }
                            .two_div {
                                width:25%;
                                float:left;
                                display:inline-block;
                            }
                            .three_div {
                                width :25%;
                                float:left ;
                                display:inline-block;
                            }
                            .four_div {
                                width:25%;
                                float:left;
                                display:inline-block;
                            }
                            .solid {    
                                font-weight: bold;
                            }
                            .liquid {    
                                width: 65%;
                                float: right;
                                margin-right: 15px;
                                border-bottom: 1px solid;
                                display: inline-block;
                                min-height: 15px;
                            }
                            .liquid2 {    
                                width: 80%;
                                float: right;
                                margin-right: 15px;
                                border-bottom: 1px solid;
                                display: inline-block;
                                min-height: 15px;
                            }
                            .liquid3 {    
                                width: 70%;
                                float: right;
                                margin-right: 15px;
                                border-bottom: 1px solid;
                                display: inline-block;
                                min-height: 15px;
                            }
                            .no-margin {
                                margin-top: 0px;
                                margin-bottom: 0px;
                            }
                            .com-name {
                                font-size: 20px;
                                font-weight: bold;
                                text-decoration: underline;
                            }
                            .main_div {
                                width: 100%;
                            }
                            .left {
                                width: 50%;
                                display: inline-block;
                                float: left;
                            }
                            .right {
                                width: 50%;
                                display: inline-block;
                                float: left;
                            }
                            img {
                                width: 50%;
                                float: right;    
                            }

                        </style>

                        <div class="main_wraper">

                            <div class="main_div">

                                <div class="left">

                                    <t t-foreach="company" t-as="c">

                                        <p class="com-name">
                                            <span t-esc="c.name"></span>
                                        </p>

                                        <p class="no-margin">
                                            <span t-esc="c.street"></span>
                                        </p>

                                        <p class="no-margin">
                                            <span t-esc="c.street2"></span>
                                        </p>

                                        <p class="no-margin">
                                            <span t-esc="c.city"></span>
                                        </p>

                                        <p class="no-margin">
                                            <span t-esc="c.country_id.name"></span>
                                        </p>

                                        <p class="no-margin">
                                            <span class="solid">Mobile:</span>
                                            <span t-esc="c.phone"></span>
                                        </p>

                                        <p class="no-margin">
                                            <span class="solid">Email:</span>
                                            <span t-esc="c.email"></span>
                                        </p>

                                    </t>

                                </div>

                                <div class="right">
                                    
                                    <t t-foreach="company" t-as="c">
                                         <span t-field="c.logo" t-field-options='{"widget": "image"}'/> 
                                    </t>
                                    
                                </div>

                            </div>

                            <h1>Cost Card Report</h1>

                            <div class="main_div">

                                <div class="left">
                                    <p>
                                        <span class="solid">Date:</span>
                                        <span class="liquid2">
                                            <span></span>
                                        </span>
                                    </p>
                                    <p>
                                        <span class="solid">Client:</span>
                                        <span class="liquid2">
                                            <span></span>
                                        </span>
                                    </p>
                                    <p>
                                        <span class="solid">Candidate Name:</span>
                                        <span class="liquid3">
                                            <span></span>
                                        </span>
                                    </p>
                                    <p>
                                        <span class="solid">Position:</span>
                                        <span class="liquid2">
                                            <span></span>
                                        </span>
                                    </p>
                                </div>

                                <div class="right">

                                    <p>
                                        <span class="solid">Number of Months:</span>
                                        <span class="liquid">
                                            <span></span>
                                        </span>
                                    </p>
                                    <p>
                                        <span class="solid">Service Type:</span>
                                        <span class="liquid3">
                                            <span></span>
                                        </span>
                                    </p>
                                    <p>
                                        <span class="solid">Gross Monthly Salary:</span>
                                        <span class="liquid">
                                            <span></span>
                                        </span>
                                    </p>

                                </div>

                            </div>

                            <br class="clear_float"/>
                             
                            <table width="100%">

                                <tr>
                                    <th colspan="2">Salary Components</th>
                                    <th>Total Cost</th>
                                    <th>Monthly Cost</th>
                                </tr>

                                <tr>
                                    <td>
                                        <span>RRG</span>
                                    </td>
                                    <td>
                                        <span></span>
                                    </td>
                                    <td>
                                        <span></span>
                                    </td>
                                    <td>
                                        <span></span>
                                    </td>
                                </tr>

                                <tr>
                                    <td colspan="2">Sub Total:</td>
                                    <td>
                                        <span></span>
                                    </td>
                                    <td>
                                        <span></span>
                                    </td>
                                </tr>

                            </table>

                        </div>

                    </div><!--end of page-->

                <!-- </t> -->
            </t>

        </template>

    </data>

</odoo>